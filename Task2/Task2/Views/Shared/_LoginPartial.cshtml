@inject SignInManager<User> SignInManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-action="logout" asp-controller="account")">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="register" asp-controller="account">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="login" asp-controller="account">Login</a>
            </li>
        }
    </ul>
